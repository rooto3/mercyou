.header-new
  .logo
    = link_to root_path do
      = image_tag 'mercari_icon.png', alt: '', height: '50', width: '50', class: 'logo'
  .name
    = link_to "mercyou", root_path 
.detail
  .title
    出品画像
    %br/
  .des
    最大10枚までアップロードできます
  //.ex-img  
  = form_for [@exhibits] do |f|
    .ex-img__box
      = f.label :image, class: 'ex-img__box--image' do
        = icon('fas', 'camera', class: 'icon')
        = f.file_field :image, class: 'image__file'
    .item-name
      .title
        商品名
      = f.text_field :name, class: 'item-name__text', placeholder: '40文字まで'
    .item-desc
      .title
        商品の説明
      = f.text_area :desc, class: 'item-desc__text', placeholder: '商品の説明(1000文字以内)'
    .item-category
      .title
        カテゴリー
      = f.select :tag_ids, [["レディース","1"],["メンズ","2"],["ベビー・キッズ","3"],["インテリア、住まい、小物","4"],["本・音楽・ゲーム","5"]], {include_blank: "選択して下さい"}, class: 'item-category__text'
    .item-state
      .title
        商品の状態
      = f.select :state, [["新品、未使用","新品、未使用"],["未使用に近い","未使用に近い"],["目立った傷や汚れなし","目立った傷や汚れなし"],["傷や汚れあり","傷や汚れあり"],["全体的に状態が悪い","全体的に状態が悪い"]], {include_blank: "選択して下さい"}, class: 'item-state__text'
    .item-from
      .title
        発送元の地域
      = f.text_field :from, class: 'item-from__text', placeholder: '都道府県'
    .item-days
      .title
        発送までの日数
      = f.select :days, [["1~2日で発送","1~2日で発送"], ["2~3日で発送","2~3日で発送"], ["4~7日で発送","4~7日で発送"]], {include_blank: "選択して下さい"}, class: 'item-days__text'
    .item-price
      .title
        販売価格
      = f.number_field :price, class: 'item-price__text', placeholder: '0'
    .ex-btn
      = f.submit '出品する', class: 'submit-btn'
  .return
    = form_for [@exhibits] do |f|
      = f.submit 'もどる', class: 'return-btn'
.footer

    
    